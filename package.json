{
  "name": "ucompress",
  "version": "0.18.0",
  "description": "A micro, all-in-one, compressor for common Web files",
  "main": "./cjs/index.js",
  "bin": "./binary.cjs",
  "scripts": {
    "build": "npm run cjs && npm run test",
    "cjs": "ascjs --no-default esm cjs",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "clean:dest": "rm -rf test/shenanigans && rm -rf test/dest && mkdir -p test/dest",
    "clean:prepared": "rm -rf test/prepared/text.txt.* && rm -rf test/prepared/recursive/text.txt.*",
    "test": "npm run clean:prepared && npm run clean:dest && nyc node test/index.js"
  },
  "keywords": [
    "minify",
    "compress",
    "html",
    "css",
    "svg",
    "png",
    "jpg",
    "gif"
  ],
  "author": "Andrea Giammarchi",
  "license": "ISC",
  "devDependencies": {
    "ascjs": "^4.0.1",
    "compression": "^1.7.4",
    "coveralls": "^3.1.0",
    "essential-md": "^0.3.1",
    "express": "^4.17.1",
    "nyc": "^15.1.0",
    "uhtml": "^1.11.6"
  },
  "module": "./esm/index.js",
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "default": "./cjs/index.js"
  },
  "dependencies": {
    "csso": "^4.0.3",
    "gifsicle": "^5.1.0",
    "html-minifier": "^4.0.0",
    "jpegtran-bin": "^5.0.1",
    "marked": "^1.1.0",
    "mime-types": "^2.1.27",
    "minify-html-literals": "^1.3.1",
    "pngquant-bin": "^6.0.0",
    "sharp": "^0.25.3",
    "svgo": "^1.3.2",
    "terser": "^4.7.0",
    "umap": "^1.0.2",
    "umeta": "^0.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/ucompress.git"
  },
  "bugs": {
    "url": "https://github.com/WebReflection/ucompress/issues"
  },
  "homepage": "https://github.com/WebReflection/ucompress#readme"
}
